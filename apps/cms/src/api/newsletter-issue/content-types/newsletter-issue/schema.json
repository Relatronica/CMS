{
  "kind": "collectionType",
  "collectionName": "newsletter_issues",
  "info": {
    "singularName": "newsletter-issue",
    "pluralName": "newsletter-issues",
    "displayName": "Newsletter Issue",
    "description": "Edizioni della newsletter premium"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    },
    "content-type-builder": {
      "visible": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "excerpt": {
      "type": "text"
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "pdfAttachment": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["files"]
    },
    "publishDate": {
      "type": "date"
    },
    "isPremium": {
      "type": "boolean",
      "default": true
    },
    "show": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::show.show",
      "inversedBy": "newsletter_issues"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "newsletters"
    }
  }
}

