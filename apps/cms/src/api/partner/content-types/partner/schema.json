{
  "kind": "collectionType",
  "collectionName": "partners",
  "info": {
    "singularName": "partner",
    "pluralName": "partners",
    "displayName": "Partner",
    "description": "Brand e sponsor integrati nei contenuti"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true,
      "unique": true
    },
    "website": {
      "type": "string"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "description": {
      "type": "text"
    },
    "tier": {
      "type": "enumeration",
      "enum": ["gold", "silver", "bronze", "community"],
      "default": "community"
    },
    "video_placements": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::video-episode.video-episode",
      "mappedBy": "partners"
    },
    "podcast_mentions": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::podcast-episode.podcast-episode",
      "mappedBy": "partners"
    },
    "article_mentions": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article.article",
      "mappedBy": "partners"
    }
  }
}

